{
	"compilerOptions": {
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": false,
		"target": "esnext",
		"baseUrl": "./",
		"paths": {
			"@components/*": ["components/*"],
			"@constants/*": ["constants/*"],
			"@hooks/*": ["hooks/*"],
			"@navigation/*": ["navigation/*"],
			"@screens/*": ["screens/*"],
			"@services/*": ["services/*"],
			"@types/*": ["types/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"extends": "expo/tsconfig.base"
}
